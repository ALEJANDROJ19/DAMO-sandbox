<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="arekusanda.lyrical.puntsmvc_1.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:layout_marginBottom="25dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="2">

        <EditText
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:id="@+id/coordX"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:text="CoordX"
            android:textAlignment="center" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:id="@+id/coordY"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:text="CoordY"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="25dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vermell"
            android:id="@+id/button_vermell"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:forceHasOverlappingRendering="false"
            android:backgroundTint="#b71c1c" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verd"
            android:id="@+id/button_verd"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:backgroundTint="#2e7d32" />
    </LinearLayout>

    <arekusanda.lyrical.puntsmvc_1.VistaDePunts
        android:id="@+id/vistaDePunts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:visibility="visible"
        android:focusableInTouchMode="true"
        android:background="@color/lt_grey"
        android:clickable="true"/>
</LinearLayout>
