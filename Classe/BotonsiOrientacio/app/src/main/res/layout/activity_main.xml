<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="team.capcios.botonsiorientacio.MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="El primer selector es refereix al posicionament relatiu dels dos grups"
        android:id="@+id/text_intro1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="El segon selector es refereix al posicionament dins del segon grup"
        android:id="@+id/text_intro2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/grup0"
        android:layout_marginTop="10dp">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/grup1"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:background="@android:drawable/alert_light_frame">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Horitzontal"
                android:id="@+id/horitzontal"
                android:checked="false"
                android:layout_marginRight="5dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vertical"
                android:id="@+id/vertical"
                android:checked="true"
                android:layout_marginRight="5dp" />
        </RadioGroup>

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/grup2"
            android:layout_marginTop="10dp"
            android:baselineAligned="false"
            android:gravity="center_vertical"
            android:background="@android:drawable/alert_light_frame">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Esquerra"
                android:id="@+id/esquerra"
                android:checked="true"
                android:layout_marginRight="5dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Centrat"
                android:id="@+id/centrat"
                android:checked="false"
                android:layout_marginRight="5dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dreta"
                android:id="@+id/dreta"
                android:checked="false"
                android:layout_marginRight="5dp" />
        </RadioGroup>
    </LinearLayout>
</LinearLayout>
